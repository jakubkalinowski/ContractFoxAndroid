<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/interior"
    tools:context="com.example.jakubkalinowski.contractfoxandroid.homePage_Fragments.Interior">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.7">

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_weight="2.4">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#00000000"
                android:layout_weight="3.8"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.9"
                android:background="#00000000"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.9"
                android:text="garage interior"
                android:id="@+id/garage_ID"
                android:textColor="#00000000"
                android:background="#00000000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_weight="2.2">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#00000000"
                android:layout_weight="2.06"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/bathroom_interior_ID"
                android:text="Bathroom"
                android:textColor="#00000000"
                android:layout_weight="2.98"
                android:background="#00000000"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.6"
                android:text="Living / Dining Room"
                android:id="@+id/livingRoom_ID"
                android:textColor="#00000000"
                android:background="#00000000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_weight="2.3">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#00000000"
                android:layout_weight="2.06"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/bedroom_interior_ID"
                android:text="Bedroom"
                android:textColor="#00000000"
                android:layout_weight="2.98"
                android:background="#00000000"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.6"
                android:text="Kitchen"
                android:id="@+id/kitchen_ID"
                android:textColor="#00000000"
                android:background="#00000000"/>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>
