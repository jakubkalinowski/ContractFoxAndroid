<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/interior"
    tools:context="com.example.jakubkalinowski.contractfoxandroid.homePage_Fragments.Interior"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.2">
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_weight="3.1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#00000000"
                android:layout_weight="3.8"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.9"
                android:background="#00000000" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.9"
                android:text="Garage"
                android:id="@+id/garage_ID"
                android:textColor="#00000000"
                android:background="#00000000"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:text="Basement"
                android:id="@+id/basement1_ID"
                android:textColor="#00000000"
                android:background="#00000000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_weight="2.7">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#00000000"
                android:layout_weight="2.06"
                android:id="@+id/attic_ID"
                android:text="Attic"
                android:textColor="#00000000"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/bathroom_interior_ID"
                android:text="Bathroom"
                android:textColor="#00000000"
                android:layout_weight="2.98"
                android:background="#00000000"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.6"
                android:text="Living Room"
                android:id="@+id/livingRoom_ID"
                android:textColor="#00000000"
                android:background="#00000000"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:text="Basement"
                android:id="@+id/basement2_ID"
                android:textColor="#00000000"
                android:background="#00000000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="560dp"
            android:orientation="vertical"
            android:weightSum="10">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="#00000000"
                android:layout_weight="2.1"
                android:id="@+id/chimney_ID"
                android:textColor="#00000000"
                android:text="Chimney"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/bedroom_interior_ID"
                android:text="Bedroom"
                android:textColor="#00000000"
                android:layout_weight="3.0"
                android:background="#00000000"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:text="Kitchen"
                android:id="@+id/kitchen_ID"
                android:textColor="#00000000"
                android:background="#00000000"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:text="Basement"
                android:id="@+id/basement3_ID"
                android:textColor="#00000000"
                android:background="#00000000"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
